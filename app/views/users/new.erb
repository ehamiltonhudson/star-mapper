<h1>New User</h1>

<% if flash[:errors]  %>
  <div class="error_message">
    <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %></p>

  <%= f.select :birth_month, options_for_select([["January"], ["February"], ["March"], ["April"], ["May"], ["June"], ["July"], ["August"], ["September"], ["October"], ["November"], ["December"]]) %> </p>
  <%= f.label :birth_day %>
  <%= f.text_field :birth_day %></p>
  <%= f.label "Birthyear(YYYY)"  %>
  <%= f.number_field :birth_year %></p>
  <%= f.collection_select :location_id, @locations, :id, :name, prompt: true %>

  <%= f.submit %><br><br>

<% end %>
