<h1>Edit a User</h1>

<% if flash[:errors]  %>
  <div class="error_message">
    <ul>
    <% flash[:errors].each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %></p>
  <label for="birthday">Birtday(MMDD): </label>
  <%= f.text_field :birthday %></p>
  <%= f.label "Birthyear(YYYY)" %>
  <%= f.text_field :birth_year %></p>
  <%= f.collection_select :location_id, @locations, :id, :name, prompt: true %>

  <%= f.submit %>
<% end %>
